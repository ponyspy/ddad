@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

.title_block
	width 100%
	position absolute
	padding 20px
	box-sizing border-box
	z-index 9999

.logo_block
	float left
	color black
	text-decoration none
	font-family 'Helvetica Neue'
	font-size 12pt
	line-height 14pt

.menu_block
	display flex
	justify-content space-between
	float right
	a
		font-family 'Helvetica Neue'
		font-size 12pt
		line-height 14pt
		text-decoration none
		color black
		text-align right
		margin-left 20px
	.menu_item
		flex 1
	.menu_about
		flex 1
		text-align center
		top 20px
		a
			margin-left 0
			text-transform uppercase
			&.active
				font-weight bold
			&:after
				content '/'
				margin-left 5px
				margin-right 5px
			&:last-child:after
				content ''
				margin-left 0
				margin-right 0