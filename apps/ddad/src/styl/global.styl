@import '_fonts.styl'
@media screen and (max-width: 680px)
	@import 'mobile/_global.styl'

body
	margin 0
	padding 0
	font-smoothing: antialiased;
	-moz-osx-font-smoothing: grayscale;

.title_block
	width 100%
	position absolute
	padding 20px
	padding-bottom 15px
	box-sizing border-box
	z-index 9999
	background-color white

.logo_block
	float left
	color black
	text-decoration none
	font-family 'HelveticaNeue Roman'
	font-size 12pt
	line-height 14pt

.menu_block
	display flex
	justify-content space-between
	// float right
	a
		font-family 'HelveticaNeue Roman'
		font-size 12pt
		line-height 14pt
		text-decoration none
		color black
		text-align right
		margin-left 20px
	.menu_items
		flex 2
		// background-color grey
		text-align right
	.menu_about
		flex 3
		top 20px
		// background-color green
		text-align right
		a
			margin-left 0
			text-transform uppercase
			&.active
				font-family 'HelveticaNeue Bold'
			&:after
				content '/'
				margin-left 5px
				margin-right 5px
			&:last-child:after
				content ''
				margin-left 0
				margin-right 0