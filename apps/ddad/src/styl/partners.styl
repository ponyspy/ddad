.partners_block
	margin-left -20px
	margin-right -20px
	font-family 'HelveticaNeue Roman'
	font-size 12pt
	line-height 14pt
	max-width 400px
	margin 0 auto
	.partner_item
		display inline-block
		vertical-align top
		width 50%
		margin-right -4px
		padding-left 20px
		padding-right 20px
		box-sizing border-box
		margin-bottom 60px
		text-decoration none
		&.size_2x
			width 100%
		&.size_1x .partner_logo
				padding-bottom 80%
		.partner_logo
			width 100%
			padding-bottom 50%
			background-position center
			background-size contain
			background-repeat no-repeat
		.partner_title
			text-align center
			color black
			margin-top 10px
			text-transform uppercase
			font-size 10pt
		&.out
			opacity 0.5