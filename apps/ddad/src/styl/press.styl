.press_block
	margin-left -20px
	margin-right -20px
	font-family 'Helvetica Neue'
	max-width 800px
	margin 0 auto
	.publication_item
		display inline-block
		vertical-align top
		width 33.333333333%
		margin-right -4px
		padding-left 20px
		padding-right 20px
		box-sizing border-box
		margin-bottom 60px
		text-decoration none
		color black
		.publication_logo
			width 100%
			padding-bottom 100%
			background-position center
			background-size cover
			background-repeat no-repeat
			background-color lightgrey
		.publication_title
			color black
			margin-top 10px
			text-transform uppercase
			font-weight bold
			margin-bottom 10px
		.publication_s_title
			margin-bottom 10px
		.publication_year
			font-weight bold