.members_block
	margin-left -20px
	margin-right -20px
	font-family 'HelveticaNeue Roman'
	font-size 12pt
	line-height 14pt
	max-width 800px
	margin 0 auto
	.member_item
		display inline-block
		vertical-align top
		width 33.33333333333333%
		margin-right -4px
		padding-left 20px
		padding-right 20px
		box-sizing border-box
		margin-bottom 20px
		.member_name
			font-family 'HelveticaNeue Bold'
			margin-bottom 5px
		&.out
			opacity 0.5
		.project_num
			margin-right 7px
			color black
			text-decoration none
			display inline-block
			&:after
				content ','
			&:last-child:after
				content ''