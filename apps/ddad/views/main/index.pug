extends layout

block header_meta
	- var content_title= 'DD:A|D'
	//- - var content_description= __('')

block header_include
	- var include_css = ['main.css']
	- var include_js = ['main.js']

block content
	.title_directions CASES
	.directions
		.d_item.manege: a(href='#') M
		.d_item.hist_pat: a(href='#') H&P
		.d_item.sidur: a(href='#') S
		.d_item.rik: a(href='#') RiK
		.d_item.moscow_biennale: a(href='#') MB

	.title_projects PROJECTS
	.projects
		each work in works
			.p_item(class=work.case)
				a(href='/works/' + work._short_id)
					span.num= work.num
					span.title= work.i18n.title.get(locale)