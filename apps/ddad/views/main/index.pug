extends layout

block header_meta
	- var content_title= 'DD:A|D'
	//- - var content_description= __('')

block header_include
	- var include_css = ['main.css']
	- var include_js = ['main.js']

block outer
	.poster

block content
	.directions
		.d_item.manege
			a(href='#') M
			.title MANEGE
		.d_item.hystoric_patriotic
			a(href='#') H&P
			.title HYSTORIC & PATRIOTIC
		.d_item.sidur
			a(href='#') S
			.title SIDUR
		.d_item.rik
			a(href='#') RiK
			.title RABOCHIY I KOLKHOZNITSA
		.d_item.moscow_biennale
			a(href='#') MB
			.title MOSCOW BIENNALE

	.projects
		each work in works
			.p_item(class=work.case, data-id=work._id.toString(), data-poster=work.poster, class= work.status == 'special' ? 'special' : '')
				a(href= work.status == 'special' ? '#' : '/works/' + (work.sym ? work.sym : work._short_id))
					span.num= work.num
					span.title= work.i18n.title.get(locale)