doctype html
html
	head
		include header
	body
		.title_block
			a.logo_block(href='/') DD:A|D
			.menu_block
				.menu_open
				.menu_items
					if (session && session.user_id)
						a(href='/admin') STARGAZER
						a(href='/auth/logout') EXIT
					a(href='/about') ABOUT
					if locale == 'ru'
						a.lang.en(href='/lang/en') EN
					else
						a.lang.ru(href='/lang/ru') RU

		.content_block
			block content

		.footer_block
		include counters